@model IEnumerable<FinalExamProgram.Models.Question>

@{
    ViewBag.Title = "Play";
}

<h3 class="text-right">@User.Identity.Name's Points: @ViewBag.Player.UserScore</h3>
<h2>Play</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
          

            <td>
                @Html.ActionLink("Answer Question", "AnswerQuestion", new { QuestionID = item.QuestionID })
            </td>

        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New Question", "Create", "Questions")
</p>
