
@{
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Login</h2>
            <br />
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <label for="inputuserName">Username: </label>
                @Html.TextBox("Username")
                <label for="inputPassword">Password: </label>
                @Html.Password("Password");
                <button type="submit">Login</button>
            }
        </div>
    </div>
</div>

